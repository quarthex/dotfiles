bindsym $mod+Home            focus parent
bindsym $mod+Up              focus up
bindsym $mod+Shift+Up        move up
bindsym $mod+Left            focus left
bindsym $mod+Shift+Left      move left
bindsym $mod+Right           focus right
bindsym $mod+Shift+Right     move right
bindsym $mod+Down            focus down
bindsym $mod+Shift+Down      move down
bindsym $mod+Escape          kill
bindsym $mod+Shift+Escape    exec i3menu
bindsym Mod1+Tab             exec rofi -show window
bindsym Ctrl+Mod1+Delete     exec termite -e 'glances --tree'
bindsym Print                exec "scrot -u -e 'notify-send scrot $f' /tmp/screenshot-%s.png"
bindsym Shift+Print          exec "scrot -m -e 'notify-send scrot $f' /tmp/screenshot-%s.png"
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute        exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga && pkill -RTMIN+1 i3blocks
bindsym XF86Calculator       exec termite -e ghci
bindsym XF86HomePage         exec "pgrep firefox || firefox"; [class="Firefox"] focus

floating_modifier $mod

# horizontal|vertical|auto
default_orientation auto

# default|stacking|tabbed
