#!/bin/sh -e

usage() {
  echo "$0 DEVICE" >&2
  false
}

[ $# -eq 1 ] && [ -e /sys/block/$1 ] || usage

read_used() { 
  awk '{ print $10 }' </sys/block/$1/stat
}

prev_used=`read_used $1`
while true
do
  sleep 1
  used=`read_used $1`
  percent=$(( ($used - $prev_used) / 10 ))
  if [ $percent -gt 75 ]
  then
    echo %{F#cc241d}$percent
  elif [ $percent -gt 25 ]
  then
    echo %{F#d65d0e}$percent
  else
    echo $percent
  fi
  prev_used=$used
done
